<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <h4 class="mb-2">尋找餐廳：</h4>
      <form action="/search">
        <div class="d-flex flex-column flex-sm-row align-items-sm-center gap-2">
          <div class="input-group mb-2 mb-sm-0 mr-sm-2">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="{{keyword}}" aria-describedby="search-button">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>

          </div>
          <div class="input-group">
            <select class="form-select" name="sort" id="sort">
              <option selected>Sort</option>
              <option value="">A > Z</option>
              <option>Z > A</option>
              <option>類別</option>
              <option>地區</option>
            </select>
          </div>
        </div>
    </div>
    </form>
  </div>
</div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
        <div class="col">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <div class="restaurant-rating mb-1">
                <i class="fa-solid fa-thumbs-up pr-2"></i> {{this.rating}}
              </div>
            </div>

            <div class="d-flex justify-content-md-end flex-wrap m-3">
              <a href="./restaurants/{{ this._id }}/edit"><button
                  class="btn btn-outline-success btn-sm">Edit</button></a>
              <a href="./restaurants/{{ this._id }}"><button
                  class="btn btn-outline-secondary btn-sm">Detail</button></a>
              <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
              </form>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>